{% extends("base.html.twig") %}
{% block body %}

        <div class="container h-100 d-flex justify-content-center align-items-center my-5">
         <div class="w-25">
             {{ form_start(form)}}
             <div class="form-group">
                 {{ form_row(form.year, {'attr': {'class': 'form-control'}}) }}
             </div>
             <div class="form-group">
                 {{ form_row(form.country, {'attr': {'class': 'form-control'}}) }}
             </div>
             {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary w-100'}}) }}
             {{ form_end(form) }}
         </div>
        </div>

    <div class="container" style="max-width: 1230px;">
        <h3 class="text-center my-5">Countries and years that app supports</h3>
        {% for countries in suportedCountries %}
            <div class="card d-inline-flex justify-content-between m-1" style="width: 18rem;">
                <div class="card-header">
                   Countries full name - <strong>{{ countries.fullName }}</strong>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Country code to earth with: <strong>{{ countries.countryCode }}</strong></li>
                    <li class="list-group-item">Date available from: <strong>{{ countries.fromDate.year }}</strong></li>
                    <li class="list-group-item">Date available to: <strong>{{ countries.toDate.year }}</strong></li>
                </ul>
            </div>
        {% endfor %}
    </div>

{% endblock %}